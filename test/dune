(executable
 (name test)
 (modules test)
 (libraries colombe alcotest))

(executable
 (name test_sendmail)
 (modules test_sendmail)
 (libraries sendmail colombe colombe.mrmime mrmime alcotest))

(alias
 (name runtest)
 (deps (:test test.exe))
 (action (run %{test} --color=always)))

(alias
 (name runtest)
 (deps (:test test_sendmail.exe))
 (action (run %{test} --color=always)))