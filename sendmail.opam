opam-version: "2.0"
name:         "colombe"
license:      "MIT"
authors:      [ "Gwenaëlle Lecat" "Romain Calascibetta <romain.calascibetta@gmail.com>" ]
maintainer:   [ "Gwenaëlle Lecat" "Romain Calascibetta <romain.calascibetta@gmail.com>" ]
homepage:     "https://github.com/dinosaure/colombe"
bug-reports:  "https://github.com/dinosaure/colombe/issues"
dev-repo:     "git+https://github.com/dinosaure/colombe.git"
doc:          "https://dinosaure.github.io/colombe/"
synopsis:     "SMTP protocol in OCaml"
description: """This package purpose is to provide an implementation of the
RFC 5321 about SMTP standard in OCaml.
"""

build: [ "dune" "build" "-p" name "-j" jobs ]
run-test: [ "dune" "runtest" "-p" name "-j" jobs ]

pin-depends: [
  [ "crowbar.dev" "git+https://github.com/stedolan/crowbar.git" ]
]

depends: [
  "ocaml" {>= "4.03.0"}
  "dune" {build}
  "colombe" {= version}
  "tls"
  "base64"
  "mrmime" {>= "0.1.0" & with-test}
  "alcotest" {with-test}
  "crowbar" {with-test}
]
