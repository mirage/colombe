(library
  (name sendmail)
  (public_name sendmail)
  (modules sendmail)
  (libraries colombe
             colombe.auth
             colombe.mime
             colombe.enhanced_status_codes))

(library
  (name sendmail_with_tls)
  (public_name sendmail.tls)
  (modules sendmail_with_tls)
  (libraries tls sendmail))

(library
  (name sendmail_lwt)
  (public_name sendmail-lwt)
  (modules sendmail_lwt)
  (libraries sendmail domain-name
             lwt tls tls.lwt))
